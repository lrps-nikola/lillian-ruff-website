---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const benefits = [
  {
    icon: "lucide:heart",
    title: "Work With Animals",
    description: "Spend your days with adorable dogs and cats"
  },
  {
    icon: "lucide:graduation-cap",
    title: "Training & Growth",
    description: "Learn from experienced professionals"
  },
  {
    icon: "lucide:users",
    title: "Great Team",
    description: "Join a supportive, passionate team"
  },
  {
    icon: "lucide:calendar",
    title: "Flexible Schedule",
    description: "Work-life balance that works for you"
  },
  {
    icon: "lucide:trending-up",
    title: "Career Growth",
    description: "Opportunities to advance your career"
  },
  {
    icon: "lucide:gift",
    title: "Employee Perks",
    description: "Discounts on services & products"
  }
];

---

<Layout title="Work With Us">

  <!-- Benefits Section -->
  <section class="pt-8 pb-16 bg-transparent">
    <Container>
      <div class="text-center max-w-3xl mx-auto mb-12">
        <div class="inline-flex items-center gap-2 bg-gradient-to-r from-brand-green/10 to-emerald-100 px-5 py-2.5 rounded-full border border-brand-green/20 mb-6">
          <Icon name="lucide:heart" class="w-5 h-5 text-brand-green" />
          <span class="text-sm font-bold text-gray-700 tracking-wider uppercase">Join Our Team</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-black text-gray-900 mb-4">
          Why Work
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-green to-emerald-600"> With Us?</span>
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed">
          Join a team that truly cares about pets and people
        </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {benefits.map((benefit) => (
          <div class="group relative rounded-2xl p-6 bg-white/80 backdrop-blur-sm border border-gray-100 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="w-14 h-14 bg-gradient-to-br from-brand-green/10 to-emerald-100 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name={benefit.icon} class="w-7 h-7 text-brand-green" />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{benefit.title}</h3>
            <p class="text-gray-600">{benefit.description}</p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Application Form Section -->
  <section id="apply" class="py-16 bg-transparent">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">Apply Now</h2>
          <p class="text-gray-600">Submit your application and we'll be in touch soon!</p>
        </div>

        <div class="rounded-3xl p-8 md:p-10 bg-white/80 backdrop-blur-sm border border-gray-100 shadow-xl">
          <form id="careers-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
            <input type="hidden" name="access_key" value="c9f2e4e7-065b-4e5c-92b3-b311059e06b6" />
            <input type="hidden" name="to" value="nikola@lillianruffpetspa.com" />
            <input type="hidden" name="subject" value="New Job Application - Lillian Ruff Pet Spa" />

            <!-- Personal Info -->
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Full Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300"
                  placeholder="John Doe"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300"
                  placeholder="john@example.com"
                />
              </div>
            </div>

            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">Phone Number *</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300"
                  placeholder="(555) 123-4567"
                />
              </div>
              <div>
                <label for="position" class="block text-sm font-semibold text-gray-700 mb-2">Position Applying For *</label>
                <select
                  id="position"
                  name="position"
                  required
                  class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300 bg-white"
                >
                  <option value="">Select a position...</option>
                  <option value="bather">Bather</option>
                  <option value="groomer">Groomer</option>
                  <option value="receptionist">Receptionist</option>
                  <option value="manager">Manager</option>
                </select>
              </div>
            </div>

            <!-- Experience -->
            <div>
              <label for="experience" class="block text-sm font-semibold text-gray-700 mb-2">Relevant Experience</label>
              <textarea
                id="experience"
                name="experience"
                rows="3"
                class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300 resize-none"
                placeholder="Tell us about your experience working with animals or in customer service..."
              ></textarea>
            </div>

            <!-- Availability -->
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="availability" class="block text-sm font-semibold text-gray-700 mb-2">Availability *</label>
                <select
                  id="availability"
                  name="availability"
                  required
                  class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300 bg-white"
                >
                  <option value="">Select availability...</option>
                  <option value="full-time">Full-time</option>
                  <option value="part-time">Part-time</option>
                  <option value="flexible">Flexible</option>
                </select>
              </div>
              <div>
                <label for="start-date" class="block text-sm font-semibold text-gray-700 mb-2">Available Start Date</label>
                <input
                  type="date"
                  id="start-date"
                  name="start-date"
                  class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300"
                />
              </div>
            </div>

            <!-- Additional Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Anything Else You'd Like Us to Know?</label>
              <textarea
                id="message"
                name="message"
                rows="3"
                class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-brand-green focus:ring-4 focus:ring-brand-green/10 outline-none transition-all duration-300 resize-none"
                placeholder="Tell us why you'd be a great fit for our team..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full flex items-center justify-center gap-2 bg-brand-green text-white px-8 py-4 rounded-xl font-bold hover:bg-emerald-600 hover:-translate-y-1 transition-all duration-300 shadow-lg shadow-brand-green/25"
            >
              <Icon name="lucide:send" class="w-5 h-5" />
              Submit Application
            </button>
          </form>

          <div id="form-result" class="mt-4 text-center hidden"></div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Contact Alternative -->
  <section class="py-12 bg-transparent">
    <Container>
      <div class="max-w-2xl mx-auto text-center">
        <div class="rounded-2xl p-8 bg-gradient-to-br from-brand-green to-emerald-600 text-white shadow-xl">
          <div class="flex items-center justify-center gap-3 mb-4">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
              <Icon name="lucide:mail" class="w-6 h-6" />
            </div>
            <h3 class="text-2xl font-bold">Have Questions?</h3>
          </div>
          <p class="text-white/90 mb-6">Feel free to reach out to us directly if you have any questions about working at Lillian Ruff Pet Spa.</p>
          <a
            href="mailto:nikola@lillianruffpetspa.com"
            class="inline-flex items-center gap-2 bg-white text-brand-green px-6 py-3 rounded-full font-bold hover:-translate-y-1 transition-all duration-300 shadow-lg"
          >
            <Icon name="lucide:mail" class="w-5 h-5" />
            nikola@lillianruffpetspa.com
          </a>
        </div>
      </div>
    </Container>
  </section>

  <!-- Bottom Spacer -->
  <div style="height: 20px;"></div>
</Layout>

<script>
  const form = document.getElementById('careers-form') as HTMLFormElement;
  const result = document.getElementById('form-result') as HTMLElement;

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);

      // Show sending state
      result.classList.remove('hidden');
      result.innerHTML = '<span class="text-gray-600">Submitting your application...</span>';

      try {
        const response = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: formData
        });

        const data = await response.json();

        if (data.success) {
          result.innerHTML = '<span class="text-green-600 font-semibold">Thank you for applying! We\'ve received your application. We\'ll review it and get back to you soon!</span>';
          form.reset();
          setTimeout(() => {
            result.classList.add('hidden');
          }, 8000);
        } else {
          result.innerHTML = '<span class="text-red-500 font-semibold">Something went wrong. Please try again or email us directly at nikola@lillianruffpetspa.com</span>';
        }
      } catch (error) {
        result.innerHTML = '<span class="text-red-500 font-semibold">Something went wrong. Please try again or email us directly at nikola@lillianruffpetspa.com</span>';
      }
    });
  }
</script>
