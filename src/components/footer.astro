---
import { Icon } from "astro-icon/components";
import Container from "@/components/container.astro";

const socialLinks = [
  { name: "Facebook", url: "https://www.facebook.com/profile.php?id=61568591938836", icon: "lucide:facebook" },
  { name: "Instagram", url: "https://www.instagram.com/lillianruffpetspa/", icon: "lucide:instagram" },
  { name: "TikTok", url: "https://www.tiktok.com/@lillianruffpetspa", icon: "lucide:music" },
  { name: "YouTube", url: "https://youtube.com/@lillianruffpetspa", icon: "lucide:youtube" },
  { name: "LinkedIn", url: "https://www.linkedin.com/company/lillianruffpetspa/", icon: "lucide:linkedin" },
  { name: "Email", url: "mailto:nikola@lillianruffpetspa.com", icon: "lucide:mail" },
];

const servicesLinks = [
  { title: "Home", path: "/" },
  { title: "Grooming", path: "/grooming" },
  { title: "Memberships", path: "/memberships" },
  { title: "Boarding & Daycare", path: "/boarding" },
  { title: "Contact", path: "/contact" },
];

const moreLinks = [
  { title: "Blog", path: "/blog" },
  { title: "Work With Us", path: "/careers" },
  { title: "Shop", path: "/shop" },
  { title: "Terms of Service", path: "/terms" },
  { title: "Privacy Policy", path: "/privacy" },
];

const hours = [
  { day: "Monday", time: "9am - 5pm" },
  { day: "Tue - Thu", time: "9am - 9pm" },
  { day: "Fri - Sun", time: "9am - 5pm" },
];
---

<footer class="relative overflow-hidden rounded-t-[2rem] md:rounded-t-[2.5rem]">
  <!-- Green Background -->
  <div class="absolute inset-0 bg-[#8eb15c]"></div>

  <!-- Decorative Elements - lighter/darker green tones -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-80 h-80 bg-[#6b9447]/30 rounded-full blur-3xl translate-x-1/3 translate-y-1/3"></div>
  <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-white/5 rounded-full blur-2xl -translate-x-1/2 -translate-y-1/2"></div>

  <!-- Paw Pattern Overlay - Same as ServicesOverview -->
  <div class="absolute inset-0 opacity-15" style="background-image: url(&quot;data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='-200 -200 912 912'%3E%3Cpath fill='%23ffffff' fill-opacity='0.6' d='M226.5 92.9c14.3 42.9-.3 86.2-32.6 96.8s-70.1-15.6-84.4-58.5s.3-86.2 32.6-96.8s70.1 15.6 84.4 58.5zM100.4 198.6c18.9 32.4 14.3 70.1-10.2 84.1s-59.7-.9-78.5-33.3S-2.7 179.3 21.8 165.3s59.7 .9 78.5 33.3zM69.2 401.2C121.6 259.9 214.7 224 256 224s134.4 35.9 186.8 177.2c3.6 9.7 5.2 20.1 5.2 30.5v1.6c0 25.8-20.9 46.7-46.7 46.7c-11.5 0-22.9-1.4-34-4.2l-88-22c-15.3-3.8-31.3-3.8-46.6 0l-88 22c-11.1 2.8-22.5 4.2-34 4.2C84.9 480 64 459.1 64 433.3v-1.6c0-10.4 1.6-20.8 5.2-30.5zM421.8 282.7c-24.5-14-29.1-51.7-10.2-84.1s54-47.3 78.5-33.3s29.1 51.7 10.2 84.1s-54 47.3-78.5 33.3zM310.1 189.7c-32.3-10.6-46.9-53.9-32.6-96.8s52.1-69.1 84.4-58.5s46.9 53.9 32.6 96.8s-52.1 69.1-84.4 58.5z'/%3E%3C/svg%3E&quot;); background-size: 70px 70px;"></div>

  <div class="relative z-10">
    <!-- Main Footer Content -->
    <Container>
      <div class="pt-16 pb-12">
        <!-- Top Section: Logo & CTA -->
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 mb-12 pb-12 border-b border-white/20">
          <!-- Logo & Tagline -->
          <div class="flex flex-col items-center lg:items-start">
            <a href="/" class="group inline-block mb-4">
              <img src="/logo.png" alt="Lillian Ruff Pet Spa" class="h-16 w-auto brightness-0 invert opacity-95 group-hover:opacity-100 transition-opacity" />
            </a>
            <p class="text-white/80 text-sm max-w-xs text-center lg:text-left">
              Your neighborhood pet spa, dedicated to pampering your furry family members.
            </p>
          </div>

          <!-- CTA Buttons - Same as navbar -->
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <a href="tel:+16316528485" class="flex items-center justify-center gap-2 border-2 border-white text-white bg-transparent rounded-full font-semibold transition-smooth hover:bg-white hover:text-[#8eb15c] hover:-translate-y-1 shadow-lg hover:shadow-xl whitespace-nowrap text-xs" style="height: 44px; width: 160px;">
              <Icon name="lucide:phone" class="w-4 h-4" />
              <span>(631) 652-8485</span>
            </a>
            <a href="https://booking.moego.pet/ol/book?name=LillianRuffPetSpa" class="flex items-center justify-center gap-2 bg-brand-blue text-white rounded-full font-semibold transition-smooth hover:bg-[#064a92] hover:-translate-y-1 shadow-lg hover:shadow-xl whitespace-nowrap text-xs" style="height: 44px; width: 160px;">
              <Icon name="lucide:calendar-check" class="w-4 h-4" />
              <span>Book Appointment</span>
            </a>
            <a href="/memberships" class="flex items-center justify-center gap-2 bg-white text-[#6b9447] rounded-full font-semibold transition-smooth hover:bg-gray-100 hover:-translate-y-1 shadow-lg hover:shadow-xl whitespace-nowrap text-xs" style="height: 44px; width: 160px;">
              <Icon name="lucide:crown" class="w-4 h-4" />
              <span>Buy Membership</span>
            </a>
          </div>
        </div>

        <!-- Links Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
          <!-- Visit Us -->
          <div class="order-1 md:order-1">
            <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5 flex items-center gap-2">
              <div class="w-8 h-px bg-gradient-to-r from-white to-transparent"></div>
              Visit Us
            </h3>
            <a href="https://maps.app.goo.gl/LLrzwZBLu15FXxLMA" target="_blank" rel="noopener noreferrer" class="group block mb-5">
              <div class="flex items-start gap-3 text-white/80 hover:text-white transition-colors">
                <Icon name="lucide:map-pin" class="w-5 h-5 text-white flex-shrink-0 mt-0.5" />
                <div>
                  <div class="text-sm">835 Portion Rd</div>
                  <div class="text-sm">Ronkonkoma, NY 11779</div>
                </div>
              </div>
            </a>
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-xs text-white/60 uppercase tracking-wider mb-2">
                <Icon name="lucide:clock" class="w-4 h-4 text-white" />
                <span>Hours</span>
              </div>
              {hours.map((h) => (
                <div class="flex justify-between text-sm text-white/80">
                  <span>{h.day}</span>
                  <span class="text-white">{h.time}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Services -->
          <div class="order-3 md:order-2">
            <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5 flex items-center gap-2">
              <div class="w-8 h-px bg-gradient-to-r from-white to-transparent"></div>
              Services
            </h3>
            <ul class="space-y-3">
              {servicesLinks.map((link) => (
                <li>
                  <a href={link.path} class="group flex items-center gap-2 text-white/80 hover:text-white transition-colors text-sm">
                    <Icon name="lucide:chevron-right" class="w-4 h-4 text-white/50 group-hover:text-white group-hover:translate-x-0.5 transition-all" />
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- More Links -->
          <div class="order-4 md:order-3">
            <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5 flex items-center gap-2">
              <div class="w-8 h-px bg-gradient-to-r from-white to-transparent"></div>
              More
            </h3>
            <ul class="space-y-3">
              {moreLinks.map((link) => (
                <li>
                  <a href={link.path} class="group flex items-center gap-2 text-white/80 hover:text-white transition-colors text-sm">
                    <Icon name="lucide:chevron-right" class="w-4 h-4 text-white/50 group-hover:text-white group-hover:translate-x-0.5 transition-all" />
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Social & Contact -->
          <div class="order-2 md:order-4">
            <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5 flex items-center gap-2">
              <div class="w-8 h-px bg-gradient-to-r from-white to-transparent"></div>
              Connect
            </h3>
            <div class="flex flex-wrap gap-2">
              {socialLinks.map((social) => (
                <a
                  href={social.url}
                  target={social.name === "Email" ? "_self" : "_blank"}
                  rel={social.name === "Email" ? undefined : "noopener noreferrer"}
                  class="w-10 h-10 bg-white/10 hover:bg-white/25 border border-white/20 hover:border-white/40 rounded-xl flex items-center justify-center text-white/80 hover:text-white transition-all duration-300 hover:-translate-y-0.5"
                  aria-label={social.name}
                >
                  <Icon name={social.icon} class="w-5 h-5" />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </Container>

    <!-- Bottom Bar -->
    <div class="border-t border-white/20 bg-[#6b9447]/30">
      <Container>
        <div class="py-6 flex flex-col md:flex-row items-center justify-between gap-4">
          <p class="text-white/70 text-sm">
            &copy; 2025 Lillian Ruff Pet Spa. All rights reserved.
          </p>
          <div class="flex items-center gap-2 text-sm text-white/70">
            <Icon name="lucide:paw-print" class="w-4 h-4 text-white" />
            <span class="text-white/80">Made with love for pets</span>
          </div>
        </div>
      </Container>
    </div>
  </div>
</footer>
