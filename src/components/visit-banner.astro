---
import { Icon } from "astro-icon/components";
---

<section class="relative">
  <!-- Top white curved section that bites into the green -->
  <div class="bg-brand-green">
    <div class="bg-white h-3 md:h-4 rounded-b-[1.5rem] md:rounded-b-[2rem]"></div>
  </div>

  <!-- Main banner content -->
  <div class="bg-brand-green px-4 md:px-12 py-2 md:py-3">
    <div class="max-w-6xl mx-auto flex items-center justify-between gap-4">
      <!-- Text content -->
      <h2 class="text-lg md:text-2xl lg:text-3xl font-bold text-white italic">
        Visit Our Spa Today!
      </h2>

      <!-- CTA Button -->
      <a
        href="/contact"
        class="group inline-flex items-center gap-2 bg-white text-gray-800 px-4 md:px-5 py-1.5 md:py-2 rounded-full font-semibold text-xs md:text-sm shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 flex-shrink-0"
      >
        <span>Find us</span>
        <Icon name="lucide:arrow-right" class="w-3.5 h-3.5 md:w-4 md:h-4 transition-transform duration-300 group-hover:translate-x-1" />
      </a>
    </div>
  </div>

  <!-- Bottom white curved section that bites into the green -->
  <div class="bg-brand-green">
    <div class="bg-white h-3 md:h-4 rounded-t-[1.5rem] md:rounded-t-[2rem]"></div>
  </div>
</section>
