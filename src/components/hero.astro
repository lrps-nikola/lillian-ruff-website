---
import Container from "@/components/container.astro";
import { Icon } from "astro-icon/components";

const services = [
  { name: "Grooming", icon: "lucide:scissors" },
  { name: "Daycare", icon: "lucide:sun" },
  { name: "Boarding", icon: "lucide:home" },
  { name: "Treats", icon: "lucide:cookie" },
  { name: "Accessories", icon: "lucide:heart" },
  { name: "Shampoos", icon: "lucide:droplets" },
];
---

<section class="hero-section relative isolate">
  <!-- Desktop Hero -->
  <div class="hidden md:block relative">
    <Container>
      <div class="relative rounded-[2rem] overflow-hidden hero-card">
        <!-- Video Background -->
        <video
          class="w-full h-[85vh] object-cover"
          autoplay
          muted
          loop
          playsinline
        >
          <source src="/videos/movie1.mp4" type="video/mp4">
        </video>

        <!-- Premium cinematic overlays -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-brand-green/10 via-transparent to-brand-blue/10"></div>
        <div class="absolute inset-0 hero-spotlight"></div>

        <!-- Animated mesh gradient background -->
        <div class="absolute inset-0 hero-mesh opacity-30"></div>

        <!-- Floating paw prints -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
          <div class="paw-float paw-1">
            <Icon name="lucide:paw-print" class="w-8 h-8 text-white/10" />
          </div>
          <div class="paw-float paw-2">
            <Icon name="lucide:paw-print" class="w-6 h-6 text-brand-green/20" />
          </div>
          <div class="paw-float paw-3">
            <Icon name="lucide:paw-print" class="w-10 h-10 text-white/8" />
          </div>
          <div class="paw-float paw-4">
            <Icon name="lucide:paw-print" class="w-5 h-5 text-brand-green/15" />
          </div>
        </div>

        <!-- Glowing orbs - contained within card -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
          <div class="absolute top-[15%] left-[15%] w-[40%] h-[40%] bg-brand-green/25 rounded-full blur-[80px] animate-pulse-slow"></div>
          <div class="absolute bottom-[15%] right-[15%] w-[35%] h-[35%] bg-brand-blue/20 rounded-full blur-[60px] animate-pulse-delayed"></div>
          <div class="absolute top-[40%] right-[20%] w-[25%] h-[25%] bg-emerald-500/15 rounded-full blur-[50px] animate-pulse-slow" style="animation-delay: 1.5s;"></div>
        </div>

        <!-- Content -->
        <div class="absolute inset-0 flex flex-col">
          <!-- Top accent bar -->
          <div class="pt-6 px-8 flex justify-center">
            <div class="hero-badge flex items-center gap-3 bg-white/10 backdrop-blur-xl px-6 py-3 rounded-full border border-white/20 shadow-2xl">
              <div class="relative">
                <div class="w-3 h-3 rounded-full bg-brand-green animate-ping absolute"></div>
                <div class="w-3 h-3 rounded-full bg-brand-green relative"></div>
              </div>
              <span class="text-white font-semibold tracking-wide">Appointments & Walk-Ins are Welcome</span>
              <Icon name="lucide:sparkles" class="w-4 h-4 text-brand-green" />
            </div>
          </div>

          <!-- Main content -->
          <div class="flex-1 flex flex-col items-center justify-center text-center px-8">
            <!-- Decorative top element -->
            <div class="flex items-center gap-4 mb-8 animate-fade-in-up" style="animation-delay: 0.1s">
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 rounded-full bg-brand-green"></div>
                <div class="h-px w-20 bg-gradient-to-r from-brand-green to-transparent"></div>
              </div>
              <Icon name="lucide:paw-print" class="w-5 h-5 text-brand-green" />
              <div class="flex items-center gap-2">
                <div class="h-px w-20 bg-gradient-to-l from-brand-green to-transparent"></div>
                <div class="w-2 h-2 rounded-full bg-brand-green"></div>
              </div>
            </div>

            <!-- Main heading with dramatic typography -->
            <div class="relative mb-8 animate-fade-in-up" style="animation-delay: 0.3s">
              <!-- Background text shadow effect -->
