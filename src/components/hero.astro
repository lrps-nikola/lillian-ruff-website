<script is:inline>
  // Animate service pills with smooth transitions
  (function() {
    const desktopPills = document.querySelectorAll('.hero-service-pill');
    const mobilePills = document.querySelectorAll('.hero-service-pill-mobile');

    function animatePills(pills, isDesktop) {
      if (pills.length === 0) return;
      let currentIndex = 0;

      function highlightNext() {
        pills.forEach((pill, index) => {
          if (index === currentIndex) {
            pill.classList.add('active-pill');
            if (isDesktop) {
              pill.style.background = 'linear-gradient(135deg, rgba(123, 166, 80, 0.9), rgba(16, 185, 129, 0.9))';
              pill.style.color = 'white';
              pill.style.boxShadow = '0 8px 32px rgba(123, 166, 80, 0.4)';
              pill.style.transform = 'scale(1.05)';
            } else {
              pill.style.background = 'rgba(123, 166, 80, 0.8)';
              pill.style.color = 'white';
              pill.style.borderColor = 'rgba(123, 166, 80, 0.6)';
            }
          } else {
            pill.classList.remove('active-pill');
            pill.style.background = '';
            pill.style.color = '';
            pill.style.boxShadow = '';
            pill.style.transform = '';
            pill.style.borderColor = '';
          }
        });
        currentIndex = (currentIndex + 1) % pills.length;
      }

      highlightNext();
      setInterval(highlightNext, 2500);
    }

    animatePills(desktopPills, true);
    animatePills(mobilePills, false);
  })();
</script>

<style>
  /* Hero card premium styling */
  .hero-card {
    isolation: isolate;
    box-shadow:
      0 0 0 1px rgba(123, 166, 80, 0.3),
      0 25px 50px -12px rgba(0, 0, 0, 0.3),
      0 0 80px -20px rgba(123, 166, 80, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .hero-card-mobile {
    isolation: isolate;
    box-shadow:
      0 0 0 1px rgba(123, 166, 80, 0.35),
      0 20px 40px -10px rgba(0, 0, 0, 0.35),
      0 0 60px -10px rgba(123, 166, 80, 0.35),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  /* Spotlight effect */
  .hero-spotlight {
    background: radial-gradient(ellipse 80% 50% at 50% 0%, rgba(123, 166, 80, 0.15) 0%, transparent 60%);
  }

  /* Animated mesh gradient */
  .hero-mesh {
    background:
      radial-gradient(at 40% 20%, rgba(123, 166, 80, 0.3) 0px, transparent 50%),
      radial-gradient(at 80% 0%, rgba(16, 185, 129, 0.2) 0px, transparent 50%),
      radial-gradient(at 0% 50%, rgba(59, 130, 246, 0.1) 0px, transparent 50%),
      radial-gradient(at 80% 50%, rgba(123, 166, 80, 0.15) 0px, transparent 50%),
      radial-gradient(at 0% 100%, rgba(16, 185, 129, 0.2) 0px, transparent 50%);
    animation: meshMove 20s ease-in-out infinite;
  }

  @keyframes meshMove {
    0%, 100% { opacity: 0.3; transform: scale(1) rotate(0deg); }
    50% { opacity: 0.5; transform: scale(1.1) rotate(2deg); }
  }

  /* Paw float animations */
  .paw-float {
    position: absolute;
    animation: pawFloat 20s ease-in-out infinite;
  }

  .paw-1 { top: 15%; left: 8%; animation-delay: 0s; }
  .paw-2 { top: 25%; right: 12%; animation-delay: 5s; }
  .paw-3 { bottom: 30%; left: 15%; animation-delay: 10s; }
  .paw-4 { bottom: 20%; right: 8%; animation-delay: 15s; }

  @keyframes pawFloat {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-20px) rotate(10deg);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-10px) rotate(-5deg);
      opacity: 0.4;
    }
    75% {
      transform: translateY(-30px) rotate(15deg);
      opacity: 0.7;
    }
  }

  /* Gradient text with premium effect */
  .hero-gradient-text {
    background: linear-gradient(
      135deg,
      #7ba650 0%,
      #10b981 25%,
      #34d399 50%,
      #10b981 75%,
      #7ba650 100%
    );
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: premiumGradient 8s ease infinite;
    filter: drop-shadow(0 2px 10px rgba(123, 166, 80, 0.3));
  }

  .hero-gradient-text-mobile {
    background: linear-gradient(135deg, #7ba650 0%, #10b981 50%, #34d399 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 1px 6px rgba(123, 166, 80, 0.3));
  }

  @keyframes premiumGradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Sparkle icon animation */
  .sparkle-icon {
    animation: sparkleRotate 4s ease-in-out infinite;
    filter: drop-shadow(0 0 10px rgba(123, 166, 80, 0.5));
  }

  @keyframes sparkleRotate {
    0%, 100% {
      transform: rotate(0deg) scale(1);
      opacity: 0.8;
    }
    50% {
      transform: rotate(180deg) scale(1.1);
      opacity: 1;
    }
  }

  /* Fade in up animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
  }

  /* Pulse animations */
  .animate-pulse-slow {
    animation: pulseSlow 6s ease-in-out infinite;
  }

  .animate-pulse-delayed {
    animation: pulseSlow 6s ease-in-out infinite;
    animation-delay: 3s;
  }

  @keyframes pulseSlow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.1); }
  }

  /* Service pills */
  .hero-service-pill {
    color: rgba(255, 255, 255, 0.5);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-service-pill-mobile {
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.4s ease;
  }

  /* Transition smooth utility */
  .transition-smooth {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hero badge shine effect */
  .hero-badge {
    position: relative;
    overflow: hidden;
  }

  .hero-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
