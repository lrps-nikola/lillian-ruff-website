        <!-- Premium corner frames -->
        <div class="absolute top-6 left-6 pointer-events-none">
          <div class="w-20 h-20 border-l-2 border-t-2 border-brand-green/40 rounded-tl-2xl"></div>
          <div class="absolute top-2 left-2 w-2 h-2 bg-brand-green rounded-full animate-pulse"></div>
        </div>
        <div class="absolute top-6 right-6 pointer-events-none">
          <div class="w-20 h-20 border-r-2 border-t-2 border-brand-green/40 rounded-tr-2xl"></div>
          <div class="absolute top-2 right-2 w-2 h-2 bg-brand-green rounded-full animate-pulse"></div>
        </div>
        <div class="absolute bottom-6 left-6 pointer-events-none">
          <div class="w-20 h-20 border-l-2 border-b-2 border-white/20 rounded-bl-2xl"></div>
        </div>
        <div class="absolute bottom-6 right-6 pointer-events-none">
          <div class="w-20 h-20 border-r-2 border-b-2 border-white/20 rounded-br-2xl"></div>
